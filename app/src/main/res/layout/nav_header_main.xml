<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/side_nav_bar"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    >

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="@dimen/px250"
        android:layout_marginTop="30dp"
        android:textIsSelectable="true">

        <LinearLayout
            android:id="@+id/lilaList"
            android:layout_width="60dp"
            android:layout_height="@dimen/px150"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/person_photo"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/home" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtVersion"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/lilaList"
            android:text="v2.1.0"
            android:textSize="@dimen/px36" />


        <LinearLayout
            android:id="@+id/lilbList"
            android:layout_width="217dp"
            android:layout_height="@dimen/px230"
            android:layout_alignTop="@+id/lilaList"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtPhoneNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="left|top"
                android:layout_weight="1"
                android:text="ID: 01012341234"
                android:textSize="@dimen/px36" />

            <TextView
                android:id="@+id/txtPhoneName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/txtPhoneNum"
                android:layout_gravity="left|center"
                android:layout_weight="1"
                android:text=""
                android:textSize="@dimen/px36" />

            <TextView
                android:id="@+id/txtPay_Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtPhoneName"
                android:layout_alignParentBottom="true"
                android:layout_gravity="left|center"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:text="99,250"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff0000"
                android:textSize="@dimen/px36" />

            <TextView
                android:id="@+id/txtPay_Bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtPhoneName"
                android:layout_alignParentBottom="true"
                android:layout_gravity="left|center"
                android:layout_weight="1"
                android:linksClickable="true"
                android:text="충전하기"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textColor="#0000ff"
                android:textSize="@dimen/px45" />
            <View
                android:layout_height="1dip"
                android:layout_width="60dp"
                android:background="#0000ff" />

        </LinearLayout>

        <Button
            android:id="@+id/btnPay_Refresh"
            android:layout_width="@dimen/px66"
            android:layout_height="@dimen/px66"
            android:layout_marginLeft="@dimen/px450"
            android:layout_marginTop="@dimen/px160"
            android:background="@drawable/btn_refresh" />

        <Button
            android:id="@+id/btnNavClose"
            android:layout_width="@dimen/px80"
            android:layout_height="@dimen/px80"
            android:layout_marginLeft="@dimen/px540"
            android:layout_marginRight="@dimen/px30"
            android:layout_marginTop="@dimen/px2"
            android:background="@drawable/btn_x" />


    </RelativeLayout>

</LinearLayout>
