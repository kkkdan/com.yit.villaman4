<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_bottom"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/px100"
    android:orientation="horizontal"
    android:background="@drawable/action_btn_bg_white">
    <!-- android:background="@color/bottom_bar" -->
    <!-- android:background="@drawable/action_btn_bg_white" -->
    <!-- android:background="@drawable/input_box_off" -->
    <!-- android:background="@drawable/row_list_bg"   -->

    <RelativeLayout
        android:layout_width="@dimen/px190"
        android:layout_height="@dimen/px100"
        android:layout_marginLeft="@dimen/px20"
        android:gravity="left"
        android:layout_weight="0.54">

        <TextView
            android:id="@+id/txtAll"
            android:layout_width="64dp"
            android:layout_height="@dimen/px80"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="초기화 "
            android:textColor="#ffffff"
            android:textSize="@dimen/px40"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="2dp"
            android:background="@color/vilmainRent"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relExp"
        android:layout_width="240dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_weight="0.28">

        <TextView
            android:id="@+id/txtExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="#ff0000"
            android:textStyle="italic"
            android:textSize="@dimen/px32"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relTotal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px80"
        android:layout_marginRight="@dimen/px20"
        android:gravity="right"
        android:layout_weight="0.54">

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="90dp"
            android:layout_height="@dimen/px70"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="총:0개"
            android:textColor="#ffffff"
            android:textSize="@dimen/px40"
            android:layout_marginBottom="2dp"
            android:background="@color/vilmainRent" />

    </RelativeLayout>

</LinearLayout>